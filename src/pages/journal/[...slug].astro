---
import { getCollection, render } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const allPosts = (await getCollection('journal')).sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );
  return allPosts.map((post, i) => ({
    params: { slug: post.id },
    props: {
      post,
      prevPost: allPosts[i - 1] || null,
      nextPost: allPosts[i + 1] || null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);

const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
const postDate = new Date(post.data.date);
const formattedDate = `${monthNames[postDate.getUTCMonth()]} ${postDate.getUTCDate()}, ${postDate.getUTCFullYear()}`;
---

<PageLayout title={`${post.data.title} â€” The Forktree Project`} description={post.data.excerpt || ''} headerVariant="dark">

  <article class="blog-post">
    <div class="container--narrow">
      <header class="blog-post__header">
        <h1>{post.data.title}</h1>
        {post.data.date && (
          <time class="blog-post__date" datetime={new Date(post.data.date).toISOString()}>
            {formattedDate}
          </time>
        )}
      </header>

      <div class="blog-post__content">
        <Content />
      </div>

      <div class="blog-post__share">
        <span class="blog-post__share-label">Share</span>
        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://www.theforktreeproject.com/journal/${post.id}`)}`}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on Facebook"
          class="blog-post__share-link"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
        </a>
        <a
          href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(`https://www.theforktreeproject.com/journal/${post.id}`)}&text=${encodeURIComponent(post.data.title)}`}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on Twitter"
          class="blog-post__share-link"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>
        </a>
        <a
          href={`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(`https://www.theforktreeproject.com/journal/${post.id}`)}&description=${encodeURIComponent(post.data.title)}`}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on Pinterest"
          class="blog-post__share-link"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.373 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 0 1 .083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.632-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12S18.627 0 12 0z"/></svg>
        </a>
      </div>

      <footer class="blog-post__footer">
        <div class="blog-post__nav">
          {nextPost && (
            <a href={`/journal/${nextPost.id}`} class="blog-post__nav-link blog-post__nav-link--prev">
              <span class="blog-post__nav-label">&larr; Previous</span>
              <span class="blog-post__nav-title">{nextPost.data.title}</span>
            </a>
          )}
          {prevPost && (
            <a href={`/journal/${prevPost.id}`} class="blog-post__nav-link blog-post__nav-link--next">
              <span class="blog-post__nav-label">Next &rarr;</span>
              <span class="blog-post__nav-title">{prevPost.data.title}</span>
            </a>
          )}
        </div>
        <a href="/journal" class="link-arrow">&lt;&lt; Back to Journal</a>
      </footer>
    </div>
  </article>

</PageLayout>

<script>
  // Wrap consecutive image-only paragraphs into gallery divs
  const content = document.querySelector('.blog-post__content');
  if (content) {
    const children = Array.from(content.children);
    let i = 0;
    while (i < children.length) {
      const el = children[i];
      // Check if this is a paragraph containing only an image
      if (el.tagName === 'P' && el.children.length === 1 && el.children[0].tagName === 'IMG') {
        // Collect consecutive image paragraphs
        const group = [el];
        let j = i + 1;
        while (j < children.length) {
          const next = children[j];
          if (next.tagName === 'P' && next.children.length === 1 && next.children[0].tagName === 'IMG') {
            group.push(next);
            j++;
          } else {
            break;
          }
        }
        // Wrap in gallery div
        const gallery = document.createElement('div');
        gallery.className = group.length === 1 ? 'gallery gallery--single' : 'gallery';
        el.before(gallery);
        for (const p of group) {
          gallery.appendChild(p.children[0]); // Move img out of p
          p.remove();
        }
        i = j;
      } else {
        i++;
      }
    }
  }
</script>

<style>
  .blog-post {
    padding-top: calc(var(--header-height) + var(--space-lg));
    padding-bottom: var(--space-xl);
  }

  .blog-post__header {
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .blog-post__header h1 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3.5vw, 2.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .blog-post__date {
    display: block;
    font-family: var(--font-heading);
    font-size: 0.8rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }

  .blog-post__content {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  .blog-post__content :global(p) {
    margin-bottom: 1.5em;
  }

  .blog-post__content :global(h2) {
    font-size: 1.5rem;
    margin: 2em 0 1em;
    color: var(--color-text);
  }

  .blog-post__content :global(h3) {
    font-size: 1.25rem;
    margin: 1.5em 0 0.75em;
    color: var(--color-text);
  }

  .blog-post__content :global(img) {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Gallery grid */
  .blog-post__content :global(.gallery) {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
    margin: 2em 0;
  }

  .blog-post__content :global(.gallery img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1;
  }

  /* Single image in gallery stays full width */
  .blog-post__content :global(.gallery--single) {
    grid-template-columns: 1fr;
  }

  .blog-post__content :global(.gallery--single img) {
    aspect-ratio: auto;
  }

  /* Odd last image spans full width */
  .blog-post__content :global(.gallery > :last-child:nth-child(odd)) {
    grid-column: 1 / -1;
  }

  .blog-post__content :global(.gallery > :last-child:nth-child(odd) img) {
    aspect-ratio: 16 / 9;
  }

  @media (max-width: 640px) {
    .blog-post__content :global(.gallery) {
      grid-template-columns: 1fr;
    }

    .blog-post__content :global(.gallery img) {
      aspect-ratio: auto;
    }
  }

  .blog-post__content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .blog-post__content :global(ul),
  .blog-post__content :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.5em;
  }

  .blog-post__content :global(li) {
    list-style: disc;
    margin-bottom: 0.5em;
  }

  .blog-post__share {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-top: var(--space-lg);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .blog-post__share-label {
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }

  .blog-post__share-link {
    color: var(--color-text-secondary);
    transition: opacity var(--transition-fast);
    display: flex;
    align-items: center;
  }

  .blog-post__share-link:hover {
    opacity: 0.6;
  }

  .blog-post__footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .blog-post__nav {
    display: flex;
    justify-content: space-between;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .blog-post__nav-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--color-text);
    max-width: 45%;
    transition: opacity var(--transition-normal);
  }

  .blog-post__nav-link:hover {
    opacity: 0.6;
  }

  .blog-post__nav-link--next {
    margin-left: auto;
    text-align: right;
  }

  .blog-post__nav-label {
    font-family: var(--font-heading);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: var(--color-text-secondary);
    margin-bottom: 0.25rem;
  }

  .blog-post__nav-title {
    font-size: 0.9rem;
    font-weight: 600;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .link-arrow {
    font-weight: 500;
    color: var(--color-text);
    transition: opacity var(--transition-normal);
  }

  .link-arrow:hover {
    opacity: 0.6;
  }
</style>
